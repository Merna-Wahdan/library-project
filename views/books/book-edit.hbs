<h2>Edit the book: {{book.title}}</h2>

<form action="/books/{{book._id}}/edit" method="post">
<label> Title:
        <input type="text" name="title" value="{{book.title}}">
    </label>

    <label> Author:
        <input type="text" name="author" value="{{book.author.name}}">
    </label>

    <label> Description:
        <textarea name="description" cols="30" rows="4">{{book.description}}</textarea>

    <label> Rate:
        <input type="text" name="rating" value="{{book.rating}}">
    </label>

    <button>Save changes</button>


</form>