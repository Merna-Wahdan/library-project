<h2>Create a book</h2>

<form method="POST" action="/books/create">
    <label> Title:
        <input type="text" name="title">
    </label>

    <label> Author:
        <select name="author">
            {{#each}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </label>

    <label> Description:
        <input type="text" name="description">
    </label>

    <label> Rating:
        <input type="text" name="rating">
    </label>

    <button type="submit">Create</button>
</form>